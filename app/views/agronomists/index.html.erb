<p id="notice"><%= notice %></p>

<h1>Agronomists</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agronomists.each do |agronomist| %>
      <tr>
        <td><%= agronomist.first_name %></td>
        <td><%= agronomist.last_name %></td>
        <td><%= agronomist.birthday %></td>
        <td><%= link_to 'Show', agronomist %></td>
        <td><%= link_to 'Edit', edit_agronomist_path(agronomist) %></td>
        <td><%= link_to 'Destroy', agronomist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

