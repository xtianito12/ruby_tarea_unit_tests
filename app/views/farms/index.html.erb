<p id="notice"><%= notice %></p>

<h1>Farms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bought on</th>
      <th>Grower</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @farms.each do |farm| %>
      <tr>
        <td><%= farm.name %></td>
        <td><%= farm.bought_on %></td>
        <td><%= farm.grower %></td>
        <td><%= link_to 'Show', farm %></td>
        <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
        <td><%= link_to 'Destroy', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

